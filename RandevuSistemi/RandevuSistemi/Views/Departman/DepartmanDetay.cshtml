@using RandevuSistemi.Models.Sinif
@model List<Doktor>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Departman Detay</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.departman</li>
</ol>
<br />
<table class="table table-hover">
    <tr>
        @*<th>#</th>*@
        <th>Ad</th>
        <th>Soyad</th>
        <th>TC</th>
        <th>İletişim</th>
        <th>Mail</th>
        <th>Gorsel</th>

    </tr>
    @foreach (var m in Model)
    {
        <tr>
            @*<th>@m.DoktorId</th>*@
            <th>@m.DoktorAd</th>
            <th>@m.DoktorSoyad</th>
            <th>@m.DoktorTC</th>
            <th>@m.DoktorTelefon</th>
            <th>@m.Mail</th>
            <th><img src="@m.DoktorFoto" /></th>

        </tr>
}
</table>





