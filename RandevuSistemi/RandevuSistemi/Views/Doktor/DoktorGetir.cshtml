@model RandevuSistemi.Models.Sinif.Doktor
@{
    ViewBag.Title = "DoktorGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Doktor Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("DoktorGuncelle", "Doktor", FormMethod.Post))
{

    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Adı :")
            @Html.TextBoxFor(x => x.DoktorAd, new { @class = "form-control" })
            @Html.HiddenFor(x => x.DoktorId)
        </div>
        <div class="form-group col-md-6">
            @Html.Label("SoyAdı:")
            @Html.TextBoxFor(x => x.DoktorSoyad, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("TC:")
            @Html.TextBoxFor(x => x.DoktorTC, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-6">
            @Html.Label("Fotograf:")
            @Html.TextBoxFor(x => x.DoktorFoto, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Doğum Tarihi")
            @Html.TextBoxFor(x => x.DoktorDogumT, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-6">
            @Html.Label("Telefon:")
            @Html.TextBoxFor(x => x.DoktorTelefon, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Mail :")
            @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-6">
            @Html.Label("Şifre:")
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
        </div>

    </div>
    <div class="form-group col-md-6">
        @Html.Label("Departman:")
        @Html.DropDownListFor(x => x.DepartmanId, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
        <br />
    </div>
    
    <div class="form-row">
        <button class="btn btn-info"><i class="fa fa-undo"></i> Güncelle</button>
    </div>
}




