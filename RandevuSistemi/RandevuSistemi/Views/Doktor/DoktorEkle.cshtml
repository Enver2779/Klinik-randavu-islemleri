@model RandevuSistemi.Models.Sinif.Doktor
@{
    ViewBag.Title = "DoktorEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Doktor Ekle</h2>
<br />

<form class="form-group" action="/Doktor/DoktorEkle" method="post">
    @Html.Label("TC:")
    @Html.TextBoxFor(x => x.DoktorTC, new { @class = "form-control" })
    <br />
    @Html.Label("Ad:")
    @Html.TextBoxFor(x => x.DoktorAd, new { @class = "form-control" })
    <br />@Html.Label("Soyad:")
    @Html.TextBoxFor(x => x.DoktorSoyad, new { @class = "form-control" })
    <br />@Html.Label("Telefon:")
    @Html.TextBoxFor(x => x.DoktorTelefon, new { @class = "form-control" })
    <br />@Html.Label("Doğum Tarihi:")
    @Html.TextBoxFor(x => x.DoktorDogumT, new { @class = "form-control" })
    <br />@Html.Label("Mail:")
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
    <br />@Html.Label("Şifresi:")
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    <br />
    @Html.Label("Görsel:")
    @Html.TextBoxFor(x => x.DoktorFoto, new { @class = "form-control" })
    <br />
    @Html.Label("Departman:")
    @Html.DropDownListFor(x => x.DepartmanId, (List<SelectListItem>)ViewBag.dprtmn, new { @class = "form-control" })
    <br />
    <button class="btn btn-info"><i class="fa fa-plus"></i> Ekle</button>
</form>
