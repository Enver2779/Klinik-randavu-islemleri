@using RandevuSistemi.Models.Sinif
@model List<Hasta>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr style="background-color: rgb(135,206,235)">

            <th>Hasta TC</th>
            <th>Hasta Adı Soyadı</th>
            <th>Hasta Telefon</th>
            <th>HastaDogumT</th>
            <th>KanGb</th>
            <th>Aciklama</th>
          
            <th>SİL</th>
            <th>GÜNCELLE</th>
            @*<th>DETAYLAR</th>*@
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        <tr>
            @*<td>@x.IlacId</td>*@
            <td>@x.HastaTc</td>
            <td>@x.HastaName @x.HastaSurName</td>
            <td>@x.HastaTelefon</td>
            <td>@x.HastaDogumT</td>
            <td>@x.KanGb</td>
            <td>@x.Aciklama</td>
       
            <td>
                <a href="/Hasta/HastaSil/@x.HastaId" class="btn btn-danger"><i class="fa fa-trash"></i> Sil</a>
            </td>

            @*<td><a href="/Satis/SatisDetay/@x.IlacId" class="btn btn-group" style="background-color:lightcoral">Detaylar</a></td>*@
            <td>
                <a href="/Hasta/HastaGetir/@x.HastaId" class="btn btn-warning"><i class="fa fa-undo"></i> Güncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/Hasta/HastaEkle/" class="btn btn-primary">Hasta Ekle</a>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>



<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


<script>
    $('#tbl1').dataTable({
        language: {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
        }
    });
</script>

