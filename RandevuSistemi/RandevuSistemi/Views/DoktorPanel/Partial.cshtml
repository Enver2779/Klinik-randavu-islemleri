@model RandevuSistemi.Models.Sinif.Doktor

@using (Html.BeginForm("DoktorBilgiGuncelle", "DoktorPanel", FormMethod.Post))
{
    <form class="form-horizontal">
        @Html.HiddenFor(x => x.DoktorId)
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Ad:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.DoktorAd, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Soyad:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.DoktorSoyad, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Mail Adresi:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="Password" class="col-sm-2 col-form-label">Şifre:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
            </div>
        </div>
      
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Telefon:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.DoktorTelefon, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Meslek:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.DepartmanId, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Görsel Linki:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.DoktorFoto, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> Şifremi Değiştirmek İstiyorum
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-info">Güncelle</button>
            </div>
        </div>
    </form>
}
