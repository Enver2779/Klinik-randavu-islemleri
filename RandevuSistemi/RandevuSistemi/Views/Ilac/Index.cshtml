@using RandevuSistemi.Models.Sinif
@model List<Ilac>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr style="background-color:rgb(252, 178, 22)">
           
            <th>İlaç adı</th>
            <th>Parti No</th>
            <th>Ruhsat NO</th>
            <th>İlaç KT</th>
            <th>İlaç KUB</th>
            <th>Son kullanma Tarihi</th>
            <th>Stok</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            @*<th>DETAYLAR</th>*@
        </tr>
    </thead>
    @foreach (var x in Model)
    {
<tr>
    @*<td>@x.IlacId</td>*@
    <td>@x.IlacAd</td>
    <td>@x.PartiNo</td>
    <td>@x.IlacKT</td>
    <td>@x.IlacKUB</td>
    <td>@x.SonKullanmaTarih</td>
    <td>@x.RuhsatNo</td>
    <td>@x.Stok</td>
    <td>
        <a href="/Ilac/IlacSil/@x.IlacId" class="btn btn-danger"><i class="fa fa-trash"></i> Sil</a>
    </td>

    @*<td><a href="/Satis/SatisDetay/@x.IlacId" class="btn btn-group" style="background-color:lightcoral">Detaylar</a></td>*@
    <td>
        <a href="/Ilac/IlacGetir/@x.IlacId" class="btn btn-warning"><i class="fa fa-undo"></i> Güncelle</a>
    </td>
</tr>
    }
</table>
<a href="/Ilac/IlacEkle/" class="btn btn-primary">İlaç Ekle</a>

