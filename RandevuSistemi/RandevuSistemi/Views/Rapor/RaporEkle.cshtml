@model RandevuSistemi.Models.Sinif.Rapor
@{
    ViewBag.Title = "RaporEkle";
    Layout = "~/Views/Shared/_DoktorLayout.cshtml";
}
<br />
<form class="form-group" method="post">

    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Belge Düzenleme Tarih:")
            @Html.TextBoxFor(x => x.BelgeDüzenlemeTarih, new { @class = "form-control" })
            @Html.HiddenFor(x => x.RaporId)
        </div>
        <div class="form-group col-md-6">
            @Html.Label("Rapor Durumu:")
            @Html.DropDownListFor(x => x.DoktorId, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })

        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Ayakta Başlama Tarih:")
            @Html.TextBoxFor(x => x.AyaktaBaslama, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-6">
            @Html.Label("Ayakta Bitiş Tarih:")
            @Html.TextBoxFor(x => x.AyaktaBitiş, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Hastane Yatış Tarih:")
            @Html.TextBoxFor(x => x.HastaneYatıs, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-6">
            @Html.Label("Hastane Çıkış Tarih:")
            @Html.TextBoxFor(x => x.HastaneCıkıs, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Hasta:")
            @Html.DropDownListFor(x => x.DoktorId, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })

        </div>
        <div class="form-group col-md-6">
            @Html.Label("Doktor:")
            @Html.DropDownListFor(x => x.DoktorId, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })

        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Tesis Kodu")
            @Html.TextBoxFor(x => x.TesisKodu, new { @class = "form-control" })
        </div>
        <div class="form-group col-md-6">
            @Html.Label("Tesis Adı:")
            @Html.TextBoxFor(x => x.TesisAdı, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-row">
        <button class="btn btn-info"> Kaydet</button>
    </div>
</form>
