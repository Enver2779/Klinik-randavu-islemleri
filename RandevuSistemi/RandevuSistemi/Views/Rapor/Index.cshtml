@using RandevuSistemi.Models.Sinif
@model List<Rapor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DoktorLayout.cshtml";
}
<br />
<a href="/Rapor/RaporEkle/" class="btn btn-primary">Rapor Ekle</a>
<br /><br />

<table id="tbl1" class="table table-dark table-hover">

    <thead>
        <tr>
            <th scope="col">Belge Düzenleme Tarih</th>
            <th scope="col">Hasta Bilgi</th>
            <th scope="col">Hasta Tc</th>
            <th scope="col">Rapor Durumu</th>
            <th scope="col">Ayakta Baş.T.</th>
            <th scope="col">Ayakta Bit.T.</th>
            <th scope="col">Hastane Yat.T.</th>
            <th scope="col">Hastane Çık.T.</th>
            <th scope="col">Güncelle</th>
            <th scope="col">Sil</th>
            <th scope="col">Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <th scope="row">@x.BelgeDüzenlemeTarih</th>
                <td>@x.Hasta.HastaName @x.Hasta.HastaSurName</td>
                <td>@x.Hasta.HastaTc</td>
                <td>@x.RaporDurum</td>
                <th>@x.AyaktaBaslama</th>
                <td>@x.AyaktaBitiş</td>
                <td>@x.HastaneYatıs</td>
                <td>@x.HastaneCıkıs</td>
                <td><a href="/Hasta/HastaSil/@x.HastaId" class="btn btn-danger"><i class="fa fa-trash"></i> Sil</a> </td>
                <td> <a href="/Hasta/HastaGetir/@x.HastaId" class="btn btn-warning"><i class="fa fa-undo"></i> Güncelle</a></td>
                <td> <a href="#" class="btn btn-success "><i class="fa fa-undo"></i> Detay</a></td>
            </tr>
        }
    </tbody>
</table>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>


<script>
    $('#tbl1').dataTable({
        language: {
            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
        }
    });
</script>






